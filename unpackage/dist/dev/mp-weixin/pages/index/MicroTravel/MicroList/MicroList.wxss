.content {
  background-color: aliceblue;
  height: 100vh;
  overflow: auto;
}
.content .tabTop {
  background-color: #ffffff;
  padding-bottom: 20rpx;
  position: fixed;
  width: 100%;
  top: 0rpx;
  left: 0;
  z-index: 999;
}
.content .tab {
  font-size: 26rpx;
}
.content .tab .tabText {
  font-size: 26rpx;
  width: 33.33%;
  text-align: center;
}
.content .tab .tabText image {
  width: 20rpx;
  height: 20rpx;
}
.content .tab .active {
  color: #1296db;
}
.content .gridTag {
  background-color: #ffffff;
  position: absolute;
  z-index: 1000;
  width: 100%;
}
.content .gridTag .gridContainer {
  text-align: center;
  padding: 20rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  /* 创建 4 列网格 */
  grid-gap: 10px;
  /* 设置网格间隙，可根据需要调整 */
}
.content .gridTag .gridContainer .gridItem {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 100rpx;
  font-size: 26rpx;
}
.content .gridTag .gridContainer .Iactive {
  background-color: #1296db;
  color: #ffffff;
}
.content .marginTop {
  margin-top: 60rpx;
}
.content .waterfall {
  padding: 20rpx;
  padding-top: 60rpx;
  -webkit-column-count: 2;
          column-count: 2;
  -webkit-column-gap: 20rpx;
          column-gap: 20rpx;
  /* 如果是两列的瀑布流，每列宽度设置为48%，中间留4%作为间隔 */
}
.content .waterfall .item {
  margin-bottom: 20rpx;
  -webkit-column-break-inside: avoid;
          break-inside: avoid;
  /* 每个项目之间的间距 */
}
.content .waterfall .item .item_text {
  text-align: center;
  padding: 10rpx;
  font-size: 26rpx;
  background-color: #ffffff;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.2);
}
.content .waterfall .item image {
  width: 100%;
  display: block;
  border-top-right-radius: 10rpx;
  border-top-left-radius: 10rpx;
}

