.microTravel {
  height: calc(100vh - 44px);
  background-color: #f6fbff;
  overflow: auto;
  position: relative;
  padding: 60rpx 20rpx;
  background-size: cover;
}
.microTravel .microTraveltatol {
  height: 180rpx;
  background-color: pink;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  background-size: 100% auto;
  border-radius: 20rpx;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.3);
  margin-bottom: 80rpx;
}
.microTravel .microTraveltatol .microTraveltatolimg {
  object-fit: cover;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-top: -100rpx;
  border: 2px solid #ffffff;
}
.microTravel .microTraveltatol .microTraveltext {
  font-size: 32rpx;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.microTravel .microTraveltatol .microTraveltext .microTraveltextimg {
  width: 32rpx;
  height: 32rpx;
}

