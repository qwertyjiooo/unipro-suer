.container {
  position: relative;
  height: calc(100vh - 44px);
  overflow: hidden;
}
.container .Packagetitle {
  z-index: 0;
  background-image: url(https://mp-fcd50ffd-8e88-4c8b-9299-20b1da88fc6d.cdn.bspapp.com/cloudstorage/55f6b61e-ac78-45ab-90e7-e68393ff7e29.png);
  background-size: 100% auto;
  height: 400rpx;
  padding: 20rpx 10%;
  position: relative;
}
.container .Packagetitle .uniIcon {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 50%;
  -webkit-transform: translate(-50%, 0);
          transform: translate(-50%, 0);
  background-color: #e6e6e6;
  padding: 10rpx 20rpx;
  width: 80%;
  border-radius: 200rpx;
}
.container .Packagetitle .uniIcon ._span {
  margin-left: 20rpx;
  color: #ffffff;
}
.container .PackageNore {
  min-height: 200rpx;
  width: calc(100% - 40rpx);
  background-color: #ffffff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  position: absolute;
  margin-top: -100rpx;
  z-index: 1;
  padding: 20rpx;
}
.container .PackageNore .costDetails {
  white-space: nowrap;
}
.container .PackageNore .costDetails::-webkit-scrollbar {
  display: none;
  /* 隐藏滚动条 */
}
.container .PackageNore .span-size {
  font-size: 30rpx;
  margin-right: 20rpx;
}
.container .PackageNore .person {
  font-size: 36rpx;
  color: #1296db;
}
.container .PackageNore .feature {
  margin-top: 20rpx;
  display: flex;
}
.container .PackageNore .feature .tone {
  font-size: 26rpx;
  margin-right: 20rpx;
  padding: 8rpx 30rpx;
  background-color: #f5f5f5;
  color: #999;
  border-radius: 50rpx;
}
.container .PackageNore .feature .flavour {
  background-color: #f6fbff;
  color: #1296db;
}
.container .PackageNore .allCard {
  margin-top: 20rpx;
  height: 70vh;
}
.container .PackageNore .allCard .textCard {
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: #f5f5f5 1rpx solid;
}
.container .PackageNore .allCard .textCard image {
  width: 200rpx;
  height: 200rpx;
}
.container .PackageNore .allCard .textCard .contitem {
  flex: 1;
  margin-left: 20rpx;
}
.container .PackageNore .allCard .textCard .contitem .spotText {
  font-size: 32rpx;
  line-height: 52rpx;
}
.container .PackageNore .allCard .textCard .contitem .contentCard {
  display: flex;
  align-items: center;
}
.container .PackageNore .allCard .textCard .contitem .contentCard .addPrice {
  font-size: 26rpx;
  line-height: 52rpx;
  color: #999;
}
.container .PackageNore .allCard .textCard .contitem .contentCard .Package {
  font-size: 22rpx;
}

