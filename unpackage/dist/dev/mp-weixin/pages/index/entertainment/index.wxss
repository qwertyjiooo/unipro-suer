.scenicSpot {
  height: 100vh;
  background-color: #f6fbff;
  overflow: auto;
  position: relative;
}
.scenicSpot .Tickets {
  height: 400rpx;
}
.scenicSpot .Tickets .TicketsImage {
  object-fit: cover;
  width: 100%;
  height: 100%;
}
.scenicSpot .title {
  border-radius: 20rpx;
  position: absolute;
  background-color: #f6fbff;
  top: 350rpx;
  padding-top: 20rpx;
}
.scenicSpot .title .text {
  padding-right: 20rpx;
  padding-left: 20rpx;
  margin-top: 20rpx;
  font-size: 36rpx;
  line-height: 72rpx;
  font-weight: bold;
  background: linear-gradient(to bottom, #e3f1ff, #01a2ff);
  -webkit-background-clip: text;
  color: transparent;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.scenicSpot .title .text ._span {
  font-size: 26rpx;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-weight: 400;
}
.scenicSpot .title .text ._span ._img {
  width: 26rpx;
  height: 26rpx;
}
.scenicSpot .title .container {
  padding: 0 20rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: repeat(4, 150rpx);
  grid-template-areas: 'a a a a' 'a a a a' 'b b c c' 'b b d d';
  gap: 10rpx;
}
.scenicSpot .title .container .item {
  background-color: #01a2ff;
  border-radius: 20rpx;
  position: relative;
  width: 100%;
}
.scenicSpot .title .container .item .itemText {
  position: absolute;
  width: 100%;
  color: #ffffff;
  font-size: 26rpx;
  bottom: 0rpx;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.05), rgba(87, 211, 255, 0.5), rgba(3, 137, 255, 0.8));
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  text-indent: 20rpx;
  padding: 60rpx 0 20rpx;
}
.scenicSpot .title .container .item ._img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 20rpx;
}
.scenicSpot .title .container .item .containerText {
  color: #999;
  font-size: 26rpx;
}
.scenicSpot .title .container :nth-child(1) {
  grid-area: a;
}
.scenicSpot .title .container :nth-child(2) {
  grid-area: b;
}
.scenicSpot .title .container :nth-child(3) {
  grid-area: c;
}
.scenicSpot .title .container :nth-child(4) {
  grid-area: d;
}

