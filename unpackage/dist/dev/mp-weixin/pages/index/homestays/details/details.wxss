.scenicSpot {
  height: calc(100% - 44px);
  position: relative;
  overflow-y: hidden;
}
.scenicSpot .cententAll {
  background-color: #ffffff;
  padding: 40rpx;
}
.scenicSpot .filteringA {
  grid-template-columns: repeat(1, 1fr);
  grid-template-rows: repeat(2, 150rpx);
  grid-template-areas: 'a a b' 'a a c';
  gap: 10rpx;
}
.scenicSpot .filteringA .item1 {
  grid-area: a;
  border-radius: 10rpx;
}
.scenicSpot .filteringB {
  grid-template-columns: repeat(2, 1fr);
  grid-template-rows: repeat(2, 150rpx);
  grid-template-areas: 'a b ' 'a b ';
  gap: 10rpx;
}
.scenicSpot .filteringB .item2 {
  grid-area: b;
  border-bottom-right-radius: 10rpx;
}
.scenicSpot .filteringC {
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(2, 150rpx);
  grid-template-areas: 'a a b' 'a a c';
  gap: 10rpx;
}
.scenicSpot .grid-container {
  padding: 0 20rpx;
  display: grid;
  place-items: center;
}
.scenicSpot .grid-container .item {
  width: 100%;
  height: 100%;
}
.scenicSpot .grid-container .item1 {
  grid-area: a;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.scenicSpot .grid-container .item2 {
  grid-area: b;
  border-top-right-radius: 10rpx;
}
.scenicSpot .grid-container .item3 {
  grid-column: c;
  border-bottom-right-radius: 10rpx;
  position: relative;
}
.scenicSpot .grid-container .mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  /* 设置蒙版颜色及透明度 */
  z-index: 1;
  color: #ffffff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.scenicSpot .title {
  font-weight: bold;
  font-size: 32rpx;
  padding-top: 20rpx;
}
.scenicSpot .detailsTag {
  padding: 20rpx 0;
}
.scenicSpot .detailsTag ._span {
  font-size: 22rpx;
  color: #999;
  border: #999 solid 1rpx;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
  margin-right: 10rpx;
}
.scenicSpot .price {
  color: #1296db;
  font-size: 32rpx;
}
.scenicSpot .price ._span {
  margin-left: 10rpx;
}
.scenicSpot .evaluate {
  font-size: 32rpx;
  color: #999;
  line-height: 80rpx;
  background-color: #f1f1f1;
  text-align: center;
  margin-top: 20rpx;
  border-radius: 10rpx;
}
.scenicSpot .business {
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
  background-color: #ffffff;
}
.scenicSpot .business .Iactive {
  height: 100rpx;
  width: 100rpx;
  border-radius: 100rpx;
  background-image: url(https://mp-fcd50ffd-8e88-4c8b-9299-20b1da88fc6d.cdn.bspapp.com/cloudstorage/18a5e98f-cdc2-421c-b615-b74f0edd31f5.png);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  margin-right: 10rpx;
}
.scenicSpot .business .businessText {
  flex: 1;
  padding: 0 20rpx;
}
.scenicSpot .business .businessText .businessTitle {
  font-size: 28rpx;
  font-weight: 500;
}
.scenicSpot .business .businessText .text {
  color: #999;
  font-size: 22rpx;
  line-height: 40rpx;
  text-indent: 1em;
}
.scenicSpot .characteristic {
  font-size: 32rpx;
  font-weight: bold;
}
.scenicSpot .contain {
  font-size: 26rpx;
  font-weight: bold;
  line-height: 64rpx;
  display: flex;
  align-items: center;
}
.scenicSpot .contain::before {
  content: "\2022";
  /* Unicode编码表示小圆点 */
  margin-right: 8px;
  /* 调整圆点与文本之间的距离 */
  font-size: 20px;
  color: #1296db;
}
.scenicSpot .trip {
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}
.scenicSpot .specialDetails {
  font-size: 26rpx;
  color: #999;
  line-height: 52rpx;
}
.scenicSpot .sun {
  display: flex;
  margin-top: 20rpx;
}
.scenicSpot .sun .specific {
  flex: 1;
}
.scenicSpot .sun .specific .specificall {
  text-align: center;
  font-size: 26rpx;
  font-weight: bold;
}
.scenicSpot .sun .specific .specificTitle {
  color: #999;
}
.scenicSpot .sunday .firstDay {
  background-color: #1296db;
  padding: 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #ffffff;
  font-weight: bold;
  margin-right: 20rpx;
}
.scenicSpot .sunday .location {
  font-size: 32rpx;
  font-weight: bold;
}
.scenicSpot .sunday .resDay .Attractions {
  margin-left: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  position: relative;
}
.scenicSpot .sunday .resDay .Attractions ._span {
  border-radius: 20rpx;
  padding: 5rpx 10rpx;
  font-size: 22rpx;
}
.scenicSpot .sunday .resDay .Attractions .touristDestinations {
  display: flex;
  justify-content: space-between;
  flex: 1;
  padding: 0 0 20rpx 20rpx;
  border-bottom: #f1f1f1 1rpx solid;
}
.scenicSpot .sunday .resDay .Attractions .touristDestinations .AttractionsTitle {
  font-size: 26rpx;
  font-weight: bold;
  color: #1296db;
}
.scenicSpot .sunday .resDay .Attractions .touristDestinations .AttractionsImg {
  width: 150rpx;
  height: 100rpx;
  margin-left: auto;
  border-radius: 10rpx;
}
.scenicSpot .sunday .resDay .Attractions .line {
  position: absolute;
  background-color: #f1f1f1;
  width: 4rpx;
  height: 78rpx;
  top: 80rpx;
  left: 33rpx;
}
.scenicSpot .sunday .resDay:last-of-type .line {
  display: none;
}
.scenicSpot .sunday .resDay:last-of-type .touristDestinations {
  border-bottom: none;
}
.scenicSpot .sunday .viewDetail {
  background-color: #1296db;
  color: #ffffff;
  text-align: center;
  font-size: 32rpx;
  border-radius: 100rpx;
  padding: 25rpx;
  margin: 20rpx 0;
}
.scenicSpot .infoPoput {
  padding: 20rpx;
  background-color: #ffffff;
  height: 70vh;
  position: relative;
}
.scenicSpot .infoPoput .popup-content {
  position: relative;
  text-align: center;
  border-bottom: #d5d5d5 1rpx solid;
  padding-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.scenicSpot .infoPoput .popup-content ._img {
  position: absolute;
  top: 6rpx;
  right: 0;
  width: 32rpx;
  height: 32rpx;
}
.scenicSpot .infoPoput .popup-bottom {
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
  border: 1rpx solid black;
  border-radius: 200rpx;
}
.scenicSpot .infoPoput .popup-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.scenicSpot .infoPoput .popup-text ._span {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
  padding-right: 20rpx;
}
.scenicSpot .infoPoput .cost {
  font-size: 26rpx;
  margin-top: 20rpx;
}
.scenicSpot .infoPoput .cost ._img {
  width: calc(100%);
  height: 400rpx;
  margin-right: 20rpx;
}
.scenicSpot .infoPoput .cost :last-of-type {
  margin-right: 0;
}
.scenicSpot .infoPoput .buttonPrimary {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.scenicSpot .infoPoput .buttonPrimary button {
  width: 48%;
  margin-top: 40rpx;
}
.scenicSpot .infoPoput .costDetails {
  font-size: 26rpx;
  padding: 20rpx;
  line-height: 40rpx;
}
.scenicSpot .customization {
  padding: 20rpx;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: calc(100% - 40rpx);
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.scenicSpot .customization .telephone {
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}
.scenicSpot .customization .make {
  flex: 3;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  background-color: #1296db;
  height: 90rpx;
  border-radius: 90rpx;
  color: #ffffff;
}

