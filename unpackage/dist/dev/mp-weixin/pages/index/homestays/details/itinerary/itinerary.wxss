.centent {
  position: relative;
  background-color: #f6fbff;
  display: flex;
  flex-direction: column;
  height: calc(100vh - 44px);
}
.centent .catalogue {
  padding: 0 20rpx 0rpx;
  display: flex;
  align-items: center;
  background-color: #ffffff;
}
.centent .catalogue .catalogueOne {
  line-height: 52rpx;
  font-size: 26rpx;
  color: #1296db;
  padding-right: 40rpx;
}
.centent .catalogue .catalogueTou {
  flex: 1;
  overflow: auto;
  white-space: nowrap;
}
.centent .catalogue .catalogueTou ._span {
  font-size: 26rpx;
  margin-right: 40rpx;
  line-height: 52rpx;
}
.centent .catalogue .catalogueTou .active {
  color: #1296db;
  border-bottom: #1296db 4rpx solid;
}
.centent .waFall {
  height: calc(100vh - 70px);
}
.centent .waFall .ttractions {
  padding: 0rpx 20rpx 10rpx;
  margin-top: 20rpx;
  background-color: #ffffff;
}
.centent .waFall .ttractions .day {
  padding-left: 70rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding-top: 40rpx;
  position: relative;
}
.centent .waFall .ttractions .place {
  font-size: 26rpx;
  line-height: 52rpx;
  font-weight: 400;
}
.centent .waFall .ttractions .place .choice {
  position: absolute;
  left: 0;
  top: 50rpx;
  font-size: 22rpx;
  border: #999 1rpx solid;
  line-height: 22rpx;
  padding: 5rpx;
}
.centent .waFall .ttractions .place .images {
  flex: 1;
  height: 300rpx;
  background-color: pink;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 10rpx;
  color: #ffffff;
  display: flex;
  align-items: flex-end;
  background-size: cover;
  /* 自动填充背景图片 */
  background-position: center;
  /* 将背景图片居中 */
}
.centent .waFall .ttractions:first-child {
  margin-top: 0rpx;
}

