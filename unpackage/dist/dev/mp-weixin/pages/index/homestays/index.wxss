.scenicSpot {
  height: calc(100vh - 44px);
  overflow: auto;
  position: relative;
}
.scenicSpot .HorImage {
  height: 300rpx;
  width: 100%;
  background-image: url(https://mp-fcd50ffd-8e88-4c8b-9299-20b1da88fc6d.cdn.bspapp.com/cloudstorage/18a5e98f-cdc2-421c-b615-b74f0edd31f5.png);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
}
.scenicSpot .HorImage .HorImageTag {
  width: 40%;
  padding: 10rpx;
  font-size: 22rpx;
  color: #ffffff;
  background-color: rgba(0, 0, 0, 0.5);
  border-top-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.scenicSpot .Horizontal {
  top: 0;
  left: 0;
  z-index: 1000;
  position: -webkit-sticky;
  position: sticky;
  padding: 20rpx;
  display: flex;
  overflow-x: auto;
  white-space: nowrap;
  border-bottom: #e1e1e1 1rpx solid;
  background-color: #ffffff;
}
.scenicSpot .Horizontal .HorizontalTitle {
  font-size: 28rpx;
  margin-right: 40rpx;
}
.scenicSpot .Horizontal .active {
  color: #1296db;
  border-bottom: #1296db 4rpx solid;
  padding-bottom: 10rpx;
  font-size: 32rpx;
}
.scenicSpot .allCard {
  display: flex;
  margin: 20rpx;
  margin-bottom: 0;
  border-bottom: 1rpx solid #e1e1e1;
  padding-bottom: 20rpx;
}
.scenicSpot .allCard .cardText .cardtitle {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 52rpx;
}
.scenicSpot .allCard .cardText .cardTag {
  background-color: #f1f1f1;
  border-radius: 10rpx;
  padding: 5rpx 10rpx;
}
.scenicSpot .allCard .cardText .cardTag ._span {
  color: #999;
  border-right: #999 2rpx solid;
  padding-right: 10rpx;
  margin-right: 10rpx;
  font-size: 28rpx;
}
.scenicSpot .allCard .cardText .cardTag ._span:last-child {
  border-right: none;
  /* 移除最后一个标签的右边框样式 */
}
.scenicSpot .allCard .cardText .csrdinformation {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
}
.scenicSpot .allCard .cardText .csrdinformation .cardprice ._span {
  color: #1296db;
}
.scenicSpot .allCard .cardText .csrdinformation .cardname {
  display: flex;
  align-items: center;
  justify-content: center;
}
.scenicSpot .allCard .cardText .csrdinformation .cardname .cardHorImage {
  height: 40rpx;
  width: 40rpx;
  border-radius: 40rpx;
  background-image: url(https://mp-fcd50ffd-8e88-4c8b-9299-20b1da88fc6d.cdn.bspapp.com/cloudstorage/18a5e98f-cdc2-421c-b615-b74f0edd31f5.png);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  margin-right: 10rpx;
}
.scenicSpot .allCard .cardText .csrdinformation .cardname ._span {
  font-size: 25rpx;
  color: #999;
}

