.scenicSpot {
  height: 100vh;
  background-color: #f6fbff;
  overflow: auto;
  position: relative;
}
.scenicSpot .Tickets {
  height: 400rpx;
}
.scenicSpot .Tickets .TicketsImage {
  object-fit: cover;
  width: 100%;
  height: 100%;
}
.scenicSpot .title {
  padding: 0 20rpx;
  border-radius: 20rpx;
}
.scenicSpot .title .text {
  font-size: 36rpx;
  line-height: 72rpx;
  font-weight: bold;
  background: linear-gradient(to bottom, #e3f1ff, #01a2ff);
  -webkit-background-clip: text;
  color: transparent;
  display: inline-block;
}
.scenicSpot .title .Package {
  width: 100%;
  height: 200rpx;
  display: flex;
  margin-bottom: 30rpx;
  align-items: center;
  justify-content: space-between;
  border-radius: 20rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(0, 0, 0, 0.1);
}
.scenicSpot .title .Package .PackageImage {
  width: 45%;
  height: 100%;
  object-fit: cover;
  border-radius: 20rpx;
}
.scenicSpot .title .Package .PackageImageB {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.scenicSpot .title .Package .PackageText {
  color: #74a9d3;
  line-height: 64rpx;
  text-align: left;
}
.scenicSpot .title .Package .PackageText .Packagetitle {
  font-size: 32rpx;
}
.scenicSpot .title .Package .PackageText .PackageNore {
  width: 200rpx;
  background-color: #d8f4ff;
  font-size: 20rpx;
  line-height: 20rpx;
  padding: 10rpx 15rpx;
}

