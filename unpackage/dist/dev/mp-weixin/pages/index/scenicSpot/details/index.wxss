.tattole {
  box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(0, 0, 0, 0.1);
}
.details {
  background-color: #f6fbff;
  position: relative;
}
.details .Tickets {
  height: 400rpx;
}
.details .Tickets .TicketsImage {
  object-fit: cover;
  width: 100%;
  height: 100%;
}
.details .detailsTotle {
  padding: 20rpx 20rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(0, 0, 0, 0.1);
}
.details .detailsTotle .detailsTotleTeal .detailsTotleTealText {
  font-size: 32rpx;
  line-height: 64rpx;
}
.details .detailsTotle .detailsTotleTeal .Package {
  font-size: 28rpx;
  color: #999;
}
.details .detailsTotle .detailsTotleTeal .label {
  color: #f16653;
  border-bottom: #d5d5d5 1rpx solid;
  padding: 20rpx 0;
}
.details .detailsTotle .detailsTotleTeal .label ._span {
  font-size: 26rpx;
  background-color: #feefed;
  line-height: 40rpx;
  padding: 5rpx 10rpx;
  margin-right: 10rpx;
}
.details .detailsTotle .detailsTotleTeal .score {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.details .detailsTotle .detailsTotleTeal .score .scoreNumber {
  font-size: 36rpx;
  font-weight: bold;
  color: #4caaf9;
}
.details .detailsTotle .detailsTotleTeal .score .scorexianshi {
  font-size: 24rpx;
  color: #999;
}
.details .recommend {
  margin-top: 20rpx;
  padding: 20rpx 20rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(0, 0, 0, 0.1);
}
.details .recommend .play {
  background: linear-gradient(to bottom, #c5e1ff, #01a2ff);
  -webkit-background-clip: text;
  color: transparent;
}
.details .recommend .reason {
  display: flex;
  background-color: #fff9f9;
  padding: 20rpx 20rpx;
}
.details .recommend .reason ._img {
  width: 40rpx;
  height: 40rpx;
}
.details .recommend .reason .recommendText {
  font-size: 32rpx;
}
.details .recommend .Package {
  font-size: 26rpx;
}
.details .menuTrue {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(0, 0, 0, 0.1);
}
.details .menuTrue .menuTrueText {
  padding: 20rpx 0;
  color: #4caaf9;
  font-size: 26rpx;
  text-align: center;
  background-color: #fff9f9;
}
.details .menu {
  white-space: nowrap;
  padding-bottom: 20rpx;
  /* 防止换行 */
}
.details .menu ::-webkit-scrollbar {
  display: none;
}
.details .menu .menu-item {
  display: inline-block;
  cursor: pointer;
  font-size: 26rpx;
  line-height: 35rpx;
  padding: 15rpx 25rpx;
  background-color: #fffcfc;
  font-weight: 600;
  margin-right: 20rpx;
}
.details .menu .active {
  background-color: #e6f7ff;
}
.details .tabtotle {
  position: relative;
}
.details .tabplay {
  position: fixed;
  width: 100%;
  top: calc(33.4px + env(safe-area-inset-top));
}
.details .tab {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  background-color: #ffffff;
  border-bottom: #999 1rpx solid;
}
.details .tab .active {
  background-color: #c5e1ff;
  color: #ffffff;
  /* 高亮边框颜色 */
}
.details .tab .navigation {
  width: 50%;
  text-align: center;
  font-size: 26rpx;
  padding: 20rpx 20rpx;
}
.details .predetermine {
  padding: 20rpx 20rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}
.details .predetermine .predetermineTatle {
  font-size: 32rpx;
  padding-bottom: 20rpx;
}
.details .predetermine .predetermineText {
  word-wrap: break-word;
  /* 当单词过长时自动换行 */
  word-break: break-all;
  /* 在单词内部换行 */
  text-indent: 2em;
  font-size: 26rpx;
}
.details .predetermine .information {
  font-size: 20rpx;
}
.details .bigeminy {
  padding: 20rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}
.details .bigeminy .bigeminyText {
  border-bottom: #d5d5d5 1rpx solid;
  padding-bottom: 20rpx;
}
.details .bigeminy .play {
  font-size: 32rpx;
}
.details .bigeminy .spot {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.details .bigeminy .spot .spotText .label {
  padding: 20rpx 0;
}
.details .bigeminy .spot .spotText .label ._span {
  font-size: 24rpx;
  line-height: 40rpx;
  margin-right: 10rpx;
}
.details .bigeminy .spot .spotText .seeDetail {
  color: #4caaf9;
  font-size: 24rpx;
}
.details .bigeminy .spot .predetermine {
  text-align: center;
}
.details .bigeminy .spot .predetermine .predetermineScore {
  line-height: 64rpx;
  color: #4caaf9;
}
.details .bigeminy .spot .predetermine .predetermineButton {
  background-color: #4caaf9;
}
.details .infoPoput {
  padding: 20rpx;
  background-color: #ffffff;
  height: 500rpx;
}
.details .infoPoput .popup-content {
  font-size: 32rpx;
  position: relative;
  text-align: center;
  border-bottom: #d5d5d5 1rpx solid;
  padding-bottom: 20rpx;
}
.details .infoPoput .popup-content ._img {
  position: absolute;
  top: 6rpx;
  right: 0;
  width: 32rpx;
  height: 32rpx;
}
.details .infoPoput .cost {
  font-size: 26rpx;
  padding: 20rpx;
  background-color: #eeeeee;
  margin-top: 20rpx;
}
.details .infoPoput .buttonPrimary {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.details .infoPoput .buttonPrimary button {
  width: 48%;
  margin-top: 40rpx;
}
.details .infoPoput .costDetails {
  font-size: 26rpx;
  padding: 20rpx;
  line-height: 40 rpx;
}
.details .poputPlay {
  height: auto;
}

