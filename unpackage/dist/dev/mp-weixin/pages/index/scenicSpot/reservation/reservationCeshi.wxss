.centent {
  height: 100vh;
  overflow: auto;
  background-color: #f6fbff;
  background-image: url("https://mp-fcd50ffd-8e88-4c8b-9299-20b1da88fc6d.cdn.bspapp.com/cloudstorage/5d1058e17095643195e3ebe9e12fe4b.png");
  background-size: 100% auto;
  background-repeat: no-repeat;
  /* 防止背景图片重复 */
}
.centent .customizer {
  display: flex;
  align-items: center;
}
.centent .customizer .child-box {
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #ffffff;
}
.centent .customizer .userimage {
  width: 50rpx;
  height: 50rpx;
  background-color: #ffffff;
  border-radius: 50rpx;
}
.centent .rou {
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
}
.centent .programme {
  background-color: #1296db;
  color: #ffffff;
  text-align: center;
}
.centent .route {
  display: flex;
  /* 添加阴影 */
}
.centent .route .routeimage {
  width: 150rpx;
  height: 150rpx;
  background-size: cover;
  /* 让背景图片填充容器 */
  background-position: center;
  /* 让背景图片在容器中居中显示 */
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.centent .route .routeName {
  flex: 1;
  font-size: 28rpx;
}
.centent .customization .choice {
  display: flex;
  align-items: center;
  border-bottom: #dfdfdf solid 1rpx;
}
.centent .customization .choice .home {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  line-height: 84rpx;
  color: #666;
}
.centent .customization .choice .active {
  color: black;
  font-weight: bold;
  position: relative;
}
.centent .customization .choice .active:after {
  content: "";
  position: absolute;
  bottom: 0;
  width: 100rpx;
  height: 5rpx;
  border-radius: 5rpx;
  display: block;
  background-color: #1296db;
  margin-left: 50%;
  -webkit-transform: translate(-50%, 0);
          transform: translate(-50%, 0);
}
.centent .customization .date {
  display: flex;
  align-items: center;
}
.centent .customization .date .datetext {
  font-size: 28rpx;
  height: 35px;
  line-height: 35px;
}
.centent .customization .date .datawidth {
  width: 200rpx;
}
.centent .customization .date .example-body {
  background-color: #fff;
  flex: 1;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: #dfdfdf solid 1rpx;
}

