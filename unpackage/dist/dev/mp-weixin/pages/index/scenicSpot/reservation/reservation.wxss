.conter {
  padding: 20rpx;
}
.conter .datePlay {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: bold;
  margin-bottom: 40rpx;
  font-size: 26rpx;
}
.conter .admission {
  background-color: #f7f7f7;
  padding: 20rpx;
  margin: 0 -20rpx;
  position: relative;
  font-size: 26rpx;
}
.conter .admission .admiConter {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 60rpx;
}
.conter .admission .admiConter .people {
  font-size: 26rpx;
}
.conter .admission .admiConter .peice {
  color: #4caaf9;
  display: flex;
  align-items: center;
}
.conter .admission .admiConter .peice .number {
  margin-right: 50rpx;
  color: #999;
}
.conter .admission .admiConter .peice ._span {
  font-size: 30rpx;
}
.conter .admission .up-arrow {
  width: 0;
  height: 0;
  border-left: 15rpx solid transparent;
  border-right: 15rpx solid transparent;
  border-bottom: 20rpx solid #ffffff;
  bottom: 0;
  left: 40rpx;
  position: absolute;
  font-size: 26rpx;
}
.conter .admission .admiTime {
  font-size: 26rpx;
  text-align: right;
}
.conter .naiceText .play {
  color: #999;
  padding: 20rpx 0;
  font-size: 26rpx;
}
.conter .naiceText .fullName {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-top: #e5e5e5 1rpx solid;
  font-size: 26rpx;
}
.conter .naiceText .fullName input {
  margin-left: 50rpx;
  flex: 1;
  font-size: 26rpx;
}

