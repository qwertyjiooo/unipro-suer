.centent {
  height: 100vh;
  overflow: auto;
  background-color: #f6fbff;
  background-image: url("https://mp-fcd50ffd-8e88-4c8b-9299-20b1da88fc6d.cdn.bspapp.com/cloudstorage/5d1058e17095643195e3ebe9e12fe4b.png");
  background-size: 100% auto;
  background-repeat: no-repeat;
}
.centent .personal {
  display: flex;
  align-items: center;
}
.centent .personal .personalImg {
  width: 150rpx;
  height: 150rpx;
  border-radius: 100rpx;
  margin-right: 20rpx;
}
.centent .personal .welcome .user {
  font-size: 32rpx;
  line-height: 64rpx;
  font-weight: bold;
  color: #ffffff;
}
.centent .personal .welcome .logout {
  display: flex;
  align-items: center;
}
.centent .personal .welcome .logout ._span {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  line-height: 54rpx;
  color: #f6fbff;
}
.centent .customiApp {
  display: flex;
  align-items: center;
  justify-content: center;
}
.centent .customiApp .cus {
  flex: 1;
  font-size: 32rpx;
  text-align: center;
  padding: 20rpx;
}
.centent .customiApp .cusActive {
  color: black;
  font-weight: bold;
  position: relative;
}
.centent .customiApp .cusActive:after {
  content: "";
  position: absolute;
  bottom: 0;
  width: 100rpx;
  height: 5rpx;
  border-radius: 5rpx;
  display: block;
  background-color: #1296db;
  margin-left: 50%;
  -webkit-transform: translate(-70%, 0);
          transform: translate(-70%, 0);
}
.centent .rou {
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
}
.centent .customization .choice {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: #f6fbff 1rpx solid;
}
.centent .customization .choice ._span {
  color: #666;
  font-size: 28rpx;
}
.centent .customization .datetext {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 64rpx;
}
.centent .customization .example-body {
  font-size: 26rpx;
  line-height: 52rpx;
  color: #666;
}
.centent .customization .cancelorder {
  display: flex;
  justify-content: flex-end;
  padding-top: 20rpx;
}
.centent .customization .cancelorder .cancel {
  color: #1296db;
  border: 2rpx #1296db solid;
  width: 150rpx;
  padding: 10rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  border-radius: 150rpx;
  text-align: center;
}

